---
import { Image } from 'astro:assets';
import gruntyLightImage from '@assets/grunty-light.png';

const title = Astro.props.title;
---

<style>
  div {
    display: flex;
    align-items: center;
  }
  .grunty-header-image {
    margin-top: 3em;
    margin-right: 0.5em;
  }
</style>

<div>
  <Image
    class="grunty-header-image"
    src={gruntyLightImage}
    alt="Grunty"
    width="50"
    height="50"
  />
  <h2>{title}</h2>
</div>
