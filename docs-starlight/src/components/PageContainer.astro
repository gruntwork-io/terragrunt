---
export interface Props {
  borderOuter?: string;
  borderInner?: string;
}

const {
  borderOuter = 'border-gray-3',
  borderInner = 'border-gray-3'
} = Astro.props;
---

<div class="relative min-h-[100vh] w-full overflow-hidden lg:px-8 xl:px-24 2xl:px-76">
  <div class={`min-h-[100vh] relative flex flex-col lg:border-l lg:border-r ${borderOuter} max-w-[1312px] mx-auto w-full`}>

    <!-- FIXME: Between 1024px - 1046px the dotted lines do not match the edge of the sections -->
    <div class=`hidden md:block pointer-events-none absolute left-1/2 top-0 -translate-x-1/2 md:w-[633px] lg:w-[852px] h-full z-0 border-x border-dashed ${borderInner}`></div>

    <slot />
  </div>
</div>
