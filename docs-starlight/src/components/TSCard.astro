---

import '@styles/global.css';

export interface Props {
  title?: string | null;
  titleSize?: string;
  class?: string;
  href?: string;
}

const {
  title = null,
  titleSize = "text-xl",
  class: customClass = "",
  href,
  ...attrs
} = Astro.props as Props;

---

<div class={`p-6 bg-white border-dashed border border-gray-3 ${customClass}`}>
  <div class="flex flex-col gap-4">
    {title && (
      <p class={`font-sans ${titleSize} text-dark-blue-1 font-medium m-0`}>
        {href ? (
          <a href={href} target="_blank" rel="noopener noreferrer" class="text-dark-blue-1 hover:text-accent transition-colors">
            {title}
          </a>
        ) : (
          title
        )}
      </p>
    )}
    <slot />
  </div>
</div>
