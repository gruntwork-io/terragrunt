---
import '@styles/global.css';

const {
  title = null,
  titleSize = "text-xl",
  class: customClass = "",
  href
} = Astro.props;
---

<div class={`p-6 bg-white border border-dashed border-gray-3 ${customClass}`}>
  <div class="flex flex-col gap-4">
    {title && (
      <p class={`font-sans ${titleSize} text-dark-blue-1 font-medium m-0`}>
        {href ? (
          <a href={href} target="_blank" rel="noopener noreferrer" class="text-dark-blue-1 hover:text-accent transition-colors">
            {title}
          </a>
        ) : (
          title
        )}
      </p>
    )}
    <slot />
  </div>
</div>
