---
import '@styles/global.css';
import { Image } from "astro:assets";

interface Props {
    src: ImageMetadata;
    alt: string;
    text: string;
    eager?: boolean;
}

const { src, alt, text, eager = false } = Astro.props as Props;
const loadingMode = eager ? 'eager' : 'lazy';
---

<button class="flex border-stroke-dark border rounded-md p-1 pr-2.5 gap-1.5 items-center">
    <Image
        src={src}
        alt={alt}
        class="w-5 h-5 rounded-sm"
        loading={loadingMode}
    />
    <span class="text-xs font-mono text-white">{text}</span>
</button>